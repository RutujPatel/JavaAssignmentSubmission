package com.Assignments;

import java.util.ArrayList;

public class No_18 {
	public static ArrayList<String> findinterleavings(String s1,String s2){
		ArrayList<String> result = new ArrayList<String>();
		if(s1.isEmpty() && s2.isEmpty()) {
			result.add("");
			return result;
		}
		if(!s1.isEmpty()) {
			ArrayList<String> subResult = findinterleavings(s1.substring(1),s2);
			for (String s : subResult) {
				result.add(s1.charAt(0)+s);
			}
		}
			if(!s2.isEmpty()) {
				ArrayList<String> subResult1 = findinterleavings(s1,s2.substring(1));
				for (String s : subResult1) {
					result.add(s2.charAt(0)+s);
				}	
		}
			return result;
		
	
	}
	public static void main(String[] args) {
		String s1 = "WX";
		String s2 = "YZ";
		ArrayList<String> interleavings = findinterleavings(s1,s2);
		for(String s : interleavings) {
			System.out.println(s);
		}
	}

}
